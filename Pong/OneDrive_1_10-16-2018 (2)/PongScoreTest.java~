public class PongScoreTest
{
  public static void main(String[] args){
    System.out.println("Create new Score object with no initial score");
    PongScore s = new PongScore();
    System.out.println("getScore() should return 0, it is: "+s.getScore());
    s.scorePoints(1);
    System.out.println("getScore() should return 1, it is: "+s.getScore());
    
    
    System.out.println("\n~Create new Score object with initial score of 6");
    PongScore s2 = new PongScore(6);
    System.out.println("getScore() should return 6, it is: "+s2.getScore());
    s2.scorePoints(1);
    System.out.println("getScore() should return 7, it is: "+s2.getScore());
    
  }
}